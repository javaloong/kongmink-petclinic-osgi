        <hibernate-validator.version>6.2.0.Final</hibernate-validator.version>
        <mysql.version>8.0.26</mysql.version>
        <hsqldb.version>2.5.2</hsqldb.version>
        <flyway.version>7.15.0</flyway.version>
        <junit.version>4.13.2</junit.version>
        <mockito.version>3.11.2</mockito.version>
        <assertj.version>3.20.2</assertj.version>
        <awaitility.version>3.1.6</awaitility.version>
        <database-rider.version>1.25.0</database-rider.version>
        <slf4j.version>1.7.32</slf4j.version>
    </properties>

    <modules>
        <module>petclinic-bean-validator</module>
        <module>petclinic-customers</module>
        <module>petclinic-features</module>
        <module>petclinic-itest</module>
        <module>petclinic-migration</module>
        <module>petclinic-rest</module>
        <module>petclinic-rest-auth</module>
        <module>petclinic-rest-core</module>
        <module>petclinic-rest-openapi</module>
        <module>petclinic-rest-swagger-ui</module>
        <module>petclinic-vets</module>
        <module>petclinic-visits</module>
    </modules>

    <dependencyManagement>
