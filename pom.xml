        <felix.framework.version>5.6.12</felix.framework.version>
        <felix.configadmin.version>1.9.22</felix.configadmin.version>
        <felix.coordinator.version>1.0.2</felix.coordinator.version>
        <felix.scr.version>2.1.30</felix.scr.version>
        <karaf.version>4.3.3</karaf.version>
        <servicemix-spec.version>2.9.0</servicemix-spec.version>
        <jakarta.inject.version>1.0.3</jakarta.inject.version>
