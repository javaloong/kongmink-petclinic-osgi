    <jpa:enable />
    <tx:enable-annotations />

    <bean id="ownerRepository" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.repository.OwnerRepositoryImpl"/>
    <bean id="petRepository" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.repository.PetRepositoryImpl" />

    <bean id="ownerService" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.service.OwnerServiceImpl">
        <argument ref="ownerRepository"/>
    </bean>
    <bean id="petService" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.service.PetServiceImpl">
        <argument ref="petRepository"/>
    </bean>

    <service ref="ownerService" interface="org.javaloong.kongmink.petclinic.customers.service.OwnerService" />
    <service ref="petService" interface="org.javaloong.kongmink.petclinic.customers.service.PetService" />

    <jaxrs:server id="customersRest" address="/customers">
        <jaxrs:serviceBeans>
            <ref component-id="ownerResource" />
            <ref component-id="petResource" />
        </jaxrs:serviceBeans>
        <jaxrs:features>
            <cxf:logging />
            <ref component-id="jaxrsValidationFeature" />
        </jaxrs:features>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
            <bean class="org.apache.cxf.jaxrs.validation.ValidationExceptionMapper"/>
        </jaxrs:providers>
    </jaxrs:server>

    <bean id="beanMapper" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.util.ModelMapperBeanMapper" />

    <bean id="ownerResource" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.web.OwnerResource">
        <argument ref="ownerService" />
        <argument ref="beanMapper" />
    </bean>
    <bean id="petResource" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.web.PetResource">
        <argument ref="petService" />
        <argument ref="beanMapper" />
    </bean>

    <bean id="jaxrsValidationFeature" class="org.apache.cxf.jaxrs.validation.JAXRSBeanValidationFeature">
        <property name="provider" ref="beanValidationProvider"/>
    </bean>
    <bean id="beanValidationProvider" class="org.apache.cxf.validation.BeanValidationProvider">
        <argument ref="validationProviderResolver" />
    </bean>
    <bean id="validationProviderResolver" class="org.javaloong.kongmink.petclinic.customers.blueprint.impl.validation.HibernateValidationProviderResolver" />
</blueprint>
